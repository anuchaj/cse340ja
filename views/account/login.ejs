<main class="login-container">
  <h1><%= title %></h1>

  <% if (typeof message !== 'undefined' && message) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>
  

  <form action="/account/login" method="POST" class="login-form" id="loginForm">
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required>

    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="account_password" placeholder="Enter your password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <i id="togglePassword" class="fa fa-eye"></i>

    <button type="submit">LOGIN</button>
  </form> 

  <p class="signup-text">
    No account? <a href="/account/register">Sign-up</a>
  </p>
</main>

