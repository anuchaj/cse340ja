<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%- title %></title>
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- nav %>
  <main>
    <h1><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h1>
    
    <!-- Error/Success Messages -->
    <% if (errors) { %>
      <div class="alert-error">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <% if (flash.success) { %>
      <div class="alert-success">
        <%= flash.success %>
      </div>
    <% } %>

    <!-- Vehicle Details -->
    <div class="vehicle-grid">
      <div>
        <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" />
      </div>
      <div>
        <p><strong>Price:</strong> $<%= vehicle.inv_price.toLocaleString() %></p>
        <p><strong>Mileage:</strong> <%= vehicle.inv_miles.toLocaleString() %> miles</p>
        <p><strong>Color:</strong> <%= vehicle.inv_color %></p>
        <p class="mt-2"><%= vehicle.inv_description %></p>
      </div>
    </div>

    <!-- Review Submission Form -->
    <div class="mt-12">
      <h2>Write a Review</h2>
      <form action="/submit-review" method="POST">
        <input type="hidden" name="vehicleId" value="<%= vehicle._id %>" />
        <div>
          <label for="userName">Your Name</label>
          <input type="text" id="userName" name="userName" required />
        </div>
        <div>
          <label for="rating">Rating (1-5)</label>
          <input type="number" id="rating" name="rating" min="1" max="5" required />
        </div>
        <div>
          <label for="comment">Comment</label>
          <textarea id="comment" name="comment" required></textarea>
        </div>
        <button type="submit">Submit Review</button>
      </form>
    </div>

    <!-- Display Reviews -->
    <div class="mt-12">
      <h2>Customer Reviews</h2>
      <% if (reviews.length > 0) { %>
        <div>
          <% reviews.forEach(review => { %>
            <div class="review-card">
              <div class="review-header">
                <span><%= review.userName %></span>
                <div class="review-stars">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <svg
                      class="star <%= i <= review.rating ? 'text-yellow-400' : 'text-gray-300' %>"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  <% } %>
                </div>
              </div>
              <p><%= review.comment %></p>
              <p class="review-date"><%= review.createdAt.toLocaleDateString() %></p>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No reviews yet. Be the first to share your thoughts!</p>
      <% } %>
    </div>
  </main>
  <footer>
    <p>Â© CSE Motors 2025</p>
  </footer>
</body>
</html>
